{
  "manifest_version": 2,
  "default_locale": "en",

  "name": "__MSG_extension_name__",
  "description": "__MSG_extension_description__",
  "version": "1.0",

  "icons": {
    "48": "images/icon.png",
    "96": "images/icon.png",
    "128": "images/icon.png",
    "256": "images/icon.png",
    "512": "images/icon.png"
  },

  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["*://*.roamresearch.com/*"]
    }
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.png",
      "19": "images/icon.png",
      "32": "images/icon.png",
      "38": "images/icon.png"
    }
  },

  "permissions": ["storage"]
}
